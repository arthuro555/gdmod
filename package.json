{
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "start": "yarn lerna run start --parallel --stream",
    "test": "yarn lerna run test --parallel --stream",
    "ts": "yarn lerna run ts --parallel --stream",
    "format": "prettier --write ./packages/API/**/*.js ./packages/API/src/**/*.ts ./packages/CLI/src/**/*.js ./packages/local-loader/**/*.js ./packages/web-loader/**/*.js ./packages/web-loader/**/*.html \"./Mod Templates/**/*.js\" \"./Mod Templates/**/*.json\"",
    "check-format": "prettier --check ./packages/API/**/*.js ./packages/API/src/**/*.ts ./packages/CLI/src/**/*.js ./packages/local-loader/**/*.js ./packages/web-loader/**/*.js ./packages/web-loader/**/*.html \"./Mod Templates/**/*.js\" \"./Mod Templates/**/*.json\""
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "prettier": "^2.2.1"
  }
}
